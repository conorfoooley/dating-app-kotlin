<MotionScene
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">


	<Transition
		app:constraintSetStart="@id/base"
		app:constraintSetEnd="@id/step_1"
		app:duration="500"
		app:motionInterpolator="easeInOut"/>

	<Transition
		app:constraintSetStart="@id/step_1"
		app:constraintSetEnd="@id/step_2"
		app:duration="500"
		app:motionInterpolator="easeInOut"/>

	<Transition
		app:constraintSetStart="@id/step_2"
		app:constraintSetEnd="@id/step_3"
		app:duration="500"
		app:motionInterpolator="easeInOut"/>

	<Transition
		app:constraintSetStart="@id/step_3"
		app:constraintSetEnd="@id/step_4"
		app:duration="500"
		app:motionInterpolator="easeOut"/>

	<Transition
		app:constraintSetStart="@id/step_4"
		app:constraintSetEnd="@id/step_5"
		app:duration="500"
		app:motionInterpolator="easeIn"/>

	<Transition
		app:constraintSetStart="@id/step_5"
		app:constraintSetEnd="@id/step_final"
		app:duration="500"
		app:motionInterpolator="easeIn"/>


	<!-- back transition compatibilities -->
	<Transition
		app:constraintSetStart="@id/step_2"
		app:constraintSetEnd="@id/step_1"
		app:duration="500"
		app:motionInterpolator="easeOut"/>

	<Transition
		app:constraintSetStart="@id/step_3"
		app:constraintSetEnd="@id/step_2"
		app:duration="500"
		app:motionInterpolator="easeOut"/>

	<Transition
		app:constraintSetStart="@id/step_4"
		app:constraintSetEnd="@id/step_3"
		app:duration="500"
		app:motionInterpolator="easeOut"/>

	<Transition
		app:constraintSetStart="@id/step_5"
		app:constraintSetEnd="@id/step_4"
		app:duration="500"
		app:motionInterpolator="easeOut"/>



	<ConstraintSet android:id="@+id/base">

		<Constraint
			android:id="@+id/tvSelectGender"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"

			android:alpha="0"
			android:rotationX="90"

			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.1"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.2" />

		<Constraint
			android:id="@+id/btnGenderMale"
			android:layout_width="0dp"
			android:layout_height="180dp"
			android:layout_marginEnd="@dimen/general_margin_8"

			android:alpha="0"
			android:rotationX="-90"
			android:rotationY="90"

			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="@id/btnGenderFemale"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tvSelectGender"
			app:layout_constraintVertical_bias="0.3" />

		<Constraint
			android:id="@+id/btnGenderFemale"
			android:layout_width="0dp"
			android:layout_height="180dp"

			android:alpha="0"
			android:rotationX="-90"
			android:rotationY="90"

			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/btnGenderMale"
			app:layout_constraintTop_toBottomOf="@id/tvSelectGender"
			app:layout_constraintVertical_bias="0.3" />

	</ConstraintSet>

	<ConstraintSet android:id="@+id/step_1">

		<Constraint
			android:id="@+id/tvSelectGender"
			android:layout_width="0dp"
			android:layout_height="wrap_content"

			android:alpha="1"

			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.2" />

		<Constraint
			android:id="@+id/btnGenderMale"
			android:layout_width="0dp"
			android:layout_height="220dp"
			android:layout_marginEnd="@dimen/general_margin_8"

			app:layout_constraintBottom_toTopOf="@id/btnRegistrationNext"
			app:layout_constraintEnd_toStartOf="@id/btnGenderFemale"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tvSelectGender"
			app:layout_constraintVertical_bias="0.3" />

		<Constraint
			android:id="@+id/btnGenderFemale"
			android:layout_width="0dp"
			android:layout_height="220dp"

			app:layout_constraintBottom_toTopOf="@id/btnRegistrationNext"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/btnGenderMale"
			app:layout_constraintTop_toBottomOf="@id/tvSelectGender"
			app:layout_constraintVertical_bias="0.3" />

	</ConstraintSet>

	<ConstraintSet android:id="@+id/step_2">

		<Constraint
			android:id="@+id/tvInterested"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="24dp"
			android:layout_marginTop="50dp"

			app:layout_constraintBottom_toTopOf="@id/btnGenderMale"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<Constraint
			android:id="@+id/btnGenderMale"
			android:layout_width="0dp"
			android:layout_height="0dp"

			app:layout_constraintBottom_toTopOf="@id/btnGenderFemale"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tvInterested" />

		<Constraint
			android:id="@+id/btnGenderFemale"
			android:layout_width="0dp"
			android:layout_height="0dp"

			app:layout_constraintBottom_toTopOf="@id/btnGenderEveryone"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/btnGenderMale"
			/>

		<Constraint
			android:id="@+id/btnGenderEveryone"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginBottom="24dp"

			app:layout_constraintTop_toBottomOf="@id/btnGenderFemale"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toTopOf="@id/btnRegistrationNext"
			/>

		<!-- fab -->
		<Constraint
			android:id="@+id/btnRegistrationNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/general_margin_16"

			android:rotationY="360"

			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintHorizontal_bias="0.8" />

	</ConstraintSet>

	<ConstraintSet android:id="@+id/step_3">

		<Constraint
			android:id="@+id/btnGenderMale"
			android:layout_width="0dp"
			android:layout_height="0dp"

			android:alpha="0"
			android:rotationX="-90"

			app:layout_constraintBottom_toTopOf="@id/btnGenderFemale"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tvInterested" />

		<Constraint
			android:id="@+id/btnGenderFemale"
			android:layout_width="0dp"
			android:layout_height="0dp"

			android:alpha="0"
			android:rotationX="-90"
			android:rotationY="90"

			app:layout_constraintBottom_toTopOf="@id/btnGenderEveryone"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/btnGenderMale"
			/>

		<Constraint
			android:id="@+id/tvSpecifyAge"
			android:layout_width="0dp"
			android:layout_height="wrap_content"

			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.3"
			/>

		<Constraint
			android:id="@+id/sliderAge"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="24dp"
			android:padding="@dimen/general_margin_16"

			app:layout_constraintTop_toBottomOf="@id/tvSpecifyAge"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>

		<Constraint
			android:id="@+id/tvAgeDisplay"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/general_margin_16"

			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/sliderAge"
			/>

	</ConstraintSet>

	<ConstraintSet android:id="@+id/step_4">

		<Constraint
			android:id="@+id/tvChangeName"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="24dp"

			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.3" />

		<Constraint
			android:id="@+id/layoutInputChangeName"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="24dp"
			android:padding="8dp"

			android:gravity="center"

			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tvChangeName"/>

		<!-- fab -->
		<Constraint
			android:id="@+id/btnRegistrationNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/general_margin_16"

			android:rotationY="360"

			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintHorizontal_bias="0.8" />

	</ConstraintSet>

	<ConstraintSet android:id="@+id/step_5">

		<Constraint
			android:id="@+id/tvChooseYourCity"
			android:layout_width="0dp"
			android:layout_height="wrap_content"

			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.3" />

		<Constraint
			android:id="@+id/dropdownCityChooserContainer"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="24dp"

			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tvChooseYourCity" />

	</ConstraintSet>

	<ConstraintSet android:id="@+id/step_final">

		<Constraint
			android:id="@+id/tvAllCorrect"
			android:layout_width="0dp"
			android:layout_height="wrap_content"

			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toTopOf="@id/layoutFinalChangeName"
			/>

		<Constraint
			android:id="@+id/layoutFinalChangeName"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/general_margin_16"

			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/tvAllCorrect"
			 />

		<Constraint
			android:id="@+id/layoutFinalGender"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/general_margin_16"

			app:layout_constraintEnd_toStartOf="@id/layoutFinalPreferredGender"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/layoutFinalChangeName"
			app:layout_constraintBottom_toTopOf="@id/layoutFinalAge"
			/>

		<Constraint
			android:id="@+id/layoutFinalPreferredGender"
			android:layout_width="0dp"
			android:layout_height="wrap_content"

			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/layoutFinalGender"
			app:layout_constraintTop_toBottomOf="@id/layoutFinalChangeName"
			app:layout_constraintBottom_toTopOf="@id/layoutFinalCity"
			/>

		<Constraint
			android:id="@+id/layoutFinalAge"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/general_margin_16"
			android:layout_marginBottom="@dimen/general_margin_16"

			app:layout_constraintEnd_toStartOf="@id/layoutFinalCity"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/layoutFinalGender"
			app:layout_constraintBottom_toTopOf="@id/btnFinalBack"
			/>

		<Constraint
			android:id="@+id/layoutFinalCity"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/general_margin_16"

			app:layout_constraintStart_toEndOf="@id/layoutFinalAge"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@id/layoutFinalPreferredGender"
			app:layout_constraintBottom_toTopOf="@id/btnFinalBack"
			/>

		<Constraint
			android:id="@+id/btnFinalBack"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:padding="@dimen/general_margin_16"

			app:layout_constraintBottom_toTopOf="@id/btnRegistrationDone"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>

		<Constraint
			android:id="@+id/btnRegistrationDone"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/general_margin_16"
			android:padding="@dimen/general_margin_16"

			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/btnFinalBack"
			/>





		<Constraint
			android:id="@+id/btnRegistrationBack"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/general_margin_16"

			android:translationY="100dp"

			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.1"
			app:layout_constraintStart_toStartOf="parent" />

		<Constraint
			android:id="@+id/btnRegistrationNext"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/general_margin_16"

			android:rotationY="360"
			android:translationY="100dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.8"
			app:layout_constraintStart_toStartOf="parent" />


	</ConstraintSet>

</MotionScene>