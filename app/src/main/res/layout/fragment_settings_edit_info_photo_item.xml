<layout
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<data>

		<variable
			name="photoUrl"
			type="String" />

	</data>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/transparent"
		>

		<androidx.cardview.widget.CardView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"

			app:cardBackgroundColor="@color/colorPrimaryDark"
			app:cardCornerRadius="15dp">

			<ImageView
				android:layout_width="@dimen/rvSettingsEditPhotoElementWidth"
				android:layout_height="@dimen/rvSettingsEditPhotoElementHeight"
				android:src="@drawable/placeholder_profile"
				android:layout_gravity="center"

				android:scaleType="centerCrop"

				app:bindImageUrl="@{photoUrl}"
				android:contentDescription="@string/description_user_photo" />

		</androidx.cardview.widget.CardView>

		<com.google.android.material.button.MaterialButton
			android:id="@+id/btnDeletePhoto"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_gravity="end|top"
			android:layout_marginBottom="@dimen/general_margin_16"
			android:layout_marginStart="@dimen/general_margin_16"

			android:insetTop="0dp"
			android:insetBottom="0dp"

			app:backgroundTint="@color/material_red_a700"
			app:iconSize="24dp"
			app:icon="@drawable/ic_clear_24dp"
			app:elevation="@null"
			app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"

			style="@style/Widget.MaterialComponents.Button.Icon"
			/>
	</FrameLayout>

</layout>