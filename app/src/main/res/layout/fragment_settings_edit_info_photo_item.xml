<layout
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<data>

		<variable
			name="bindItem"
			type="com.mmdev.business.data.PhotoItem" />

	</data>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>

		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="@dimen/rvSettingsEditPhotoElementHeight"

			app:cardBackgroundColor="@color/transparent"
			app:cardCornerRadius="16dp">

			<ImageView
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_gravity="center"
				android:scaleType="center"

				app:bindImageUrl="@{bindItem.fileUrl}"
				android:contentDescription="@string/description_user_photo" />

		</androidx.cardview.widget.CardView>

		<com.google.android.material.button.MaterialButton android:id="@+id/btnDeletePhoto"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_gravity="end|top"
			android:layout_margin="4dp"

			android:insetTop="0dp"
			android:insetBottom="0dp"

			app:backgroundTint="@color/material_red_a700"
			app:iconSize="24dp"
			app:icon="@drawable/ic_clear_24dp"
			app:elevation="0dp"
			android:elevation="@null"
			app:shapeAppearanceOverlay="@style/MyAppShapeAppearanceOverlay.Circle"

			style="@style/Widget.MaterialComponents.Button.Icon"
			/>
	</FrameLayout>

</layout>