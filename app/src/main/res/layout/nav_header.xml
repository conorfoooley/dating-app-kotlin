<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/colorPrimary"
	android:paddingTop="@dimen/notifbar_size_24">


	<ImageView
		android:id="@+id/settings_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/general_margin_16"
		android:background="?attr/selectableItemBackground"
		android:clickable="true"
		android:focusable="true"
		android:src="@drawable/ic_nav_header_settings_24dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="ContentDescription" />

	<ImageView
		android:id="@+id/signed_in_user_image_view"
		android:layout_width="64dp"
		android:layout_height="64dp"
		android:layout_margin="@dimen/general_margin_16"
		android:src="@color/white"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/signed_in_username_tv"
		tools:ignore="ContentDescription" />


	<TextView
		android:id="@+id/signed_in_username_tv"
		style="@style/regular_text_white_20sp_85op"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/general_margin_16"
		android:text="@string/default_name"
		app:layout_constraintEnd_toStartOf="@+id/arrow_down"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/signed_in_user_image_view" />

	<ImageView
		android:id="@+id/arrow_down"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:src="@drawable/ic_nav_header_arrow_down_24dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="@id/signed_in_username_tv"
		app:layout_constraintTop_toTopOf="@+id/signed_in_username_tv"
		tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>
