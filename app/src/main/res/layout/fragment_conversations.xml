<layout xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<import type="android.view.View"/>

		<variable
			name="viewModel"
			type="com.mmdev.roove.ui.dating.conversations.ConversationsViewModel" />
	</data>


	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/containerConversations"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorPrimary">

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/rvConversationList"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:clipToPadding="false"
			android:overScrollMode="never"
			android:scrollbars="vertical"

			android:visibility='@{viewModel.showTextHelper ? View.INVISIBLE : View.VISIBLE, default = "invisible"}'

			app:bindData="@{viewModel.conversationsList}"
			app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

			app:paddingTopSystemWindowInsets="@{true}"

			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"

			tools:itemCount="5"
			tools:listitem="@layout/fragment_conversations_item" />

		<TextView
			android:id="@+id/tvConversationsHelperText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"

			android:text="There is no started conversations...\n\nText someone first!"
			android:textSize="24sp"
			style="@style/regular_text"

			android:visibility='@{viewModel.showTextHelper ? View.VISIBLE : View.INVISIBLE, default = "invisible"}'
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			/>

	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>