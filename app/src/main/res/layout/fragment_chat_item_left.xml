<RelativeLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/colorPrimaryDark"
	android:paddingEnd="@dimen/general_margin_8"
	android:paddingStart="@dimen/general_margin_8"
	android:paddingBottom="2dp"
	android:layout_marginEnd="60dp"
	android:layout_marginBottom="@dimen/general_margin_8"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout
		android:id="@+id/contentMessageChat"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:background="@drawable/fragment_chat_message_left"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/ivChatMessagePhoto"
			android:layout_width="200dp"
			android:layout_height="250dp"
			android:layout_margin="10dp"
			android:background="@color/colorAccentDark"
			android:contentDescription="@string/chat_message_sender_attach_img_description"
			android:src="@drawable/placeholder_image"
			android:visibility="visible"/>

		<TextView
			android:id="@+id/tvChatMessageText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:text="@string/default_message_text"
			android:textIsSelectable="true"
			android:textSize="16sp"
			style="@style/regular_text_white85op"/>

	</LinearLayout>

	<TextView
		android:id="@+id/tvChatMessageTimestamp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/contentMessageChat"
		android:layout_alignStart="@id/contentMessageChat"
		android:layout_marginTop="2dp"

		android:text="@string/default_message_date"
		android:textColor="@color/white_25"
		android:textSize="8sp"
		style="@style/regular_text_white85op" />


</RelativeLayout>