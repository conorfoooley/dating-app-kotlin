<layout xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:bind="http://schemas.android.com/apk/res-auto">

	<data>

		<import type="android.view.View"/>
		<variable
			name="placeItem"
			type="com.mmdev.business.places.PlaceItem" />

	</data>

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="300dp"
		android:layout_marginStart="@dimen/card_margin_fix_rview_8"
		android:layout_marginBottom="@dimen/card_margin_fix_rview_8"
		app:cardBackgroundColor="@color/colorPrimary"
		app:cardCornerRadius="10dp"
		app:cardElevation="1dp">

		<ImageView
			android:id="@+id/ivImageHolder"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/colorAccentDark"
			android:scaleType="centerCrop"
			android:visibility='@{placeItem.images[0].image!="" ? View.VISIBLE : View.GONE}'

			bind:imageUrl="@{placeItem.images[0].image}"

			tools:ignore="ContentDescription" />

		<ProgressBar
			android:id="@+id/pbImageLoading"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:progress="100"

			style="@style/Widget.AppCompat.ProgressBar" />

		<ImageView
			android:id="@+id/ivImageBottomGradient"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_gravity="bottom"
			android:scaleType="centerCrop"
			android:src="@drawable/gradient_transparent"
			tools:ignore="ContentDescription" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center|bottom"
			android:layout_margin="@dimen/general_margin_8"

			android:text="@{placeItem.short_title, default = @string/default_name}"
			android:textSize="18sp"
			style="@style/regular_text_white85op"
			/>


	</androidx.cardview.widget.CardView>
</layout>